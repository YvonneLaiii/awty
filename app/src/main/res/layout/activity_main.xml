<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="phone"
            android:ems="10"
            android:id="@+id/phone"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/minutes"
            android:layout_marginTop="180dp" app:layout_constraintEnd_toEndOf="@+id/minutes"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="minutes"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/minutes"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="88dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="88dp"
            android:layout_marginBottom="372dp"/>
    <EditText
            android:hint="message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/message"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/phone"
            android:layout_marginTop="56dp" app:layout_constraintEnd_toEndOf="@+id/phone"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_start"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="89dp"
            app:layout_constraintTop_toBottomOf="@+id/minutes" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>